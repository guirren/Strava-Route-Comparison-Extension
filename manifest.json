{
  "manifest_version": 3,
  "name": "Strava Route Comparison",
  "version": "1.0.0",
  "description": "Compare Strava routes with saved races and calculate equivalent elevation",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.strava.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.strava.com/maps/create*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
